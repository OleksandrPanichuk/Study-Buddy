{
  "name": "@repo/constants",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run build:esm -- -w",
    "build": "bun run clear && bun run build:cjs && bun run build:esm && bun run postbuild",
    "build:cjs": "bun x tsc -p tsconfig.cjs.json",
    "build:esm": "bun x tsc -p tsconfig.esm.json",
    "postbuild": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "clear": "rimraf ./dist"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
   ".": {
     "types": "./dist/cjs/index.d.ts",
     "import": "./dist/esm/index.js",
     "require": "./dist/cjs/index.js",
     "default": "./dist/esm/index.js"
   }
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "rimraf": "^6.0.0",
    "typescript": "latest"
  }
}