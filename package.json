{
  "name": "study-buddy",
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "turbo": "^2.7.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo dev //#dev:docker",
    "dev:docker": "docker compose up",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "build:schemas": "cd packages/schemas && bun run build",
    "build:constants": "cd packages/constants && bun run build"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}