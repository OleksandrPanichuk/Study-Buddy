{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},

	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!dist", "!build"]
	},

	"linter": {
		"enabled": true,
		"domains": {
			"react": "recommended"
		}
	}
}
