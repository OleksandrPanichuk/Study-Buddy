{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2021",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": false,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"paths": {
			"@/*": ["src/*"],
			"@app/logger": ["libs/logger/src"],
			"@app/logger/*": ["libs/logger/src/*"],
			"@app/hashing": ["libs/hashing/src"],
			"@app/hashing/*": ["libs/hashing/src/*"],
			"@app/mailer": ["libs/mailer/src"],
			"@app/mailer/*": ["libs/mailer/src/*"],
			"@app/prisma": ["libs/prisma/src"],
			"@app/prisma/*": ["libs/prisma/src/*"],
			"@app/redis": ["libs/redis/src"],
			"@app/redis/*": ["libs/redis/src/*"],
			"@prisma/generated/*": ["libs/prisma/src/generated/*"]
		}
	},
	"include": ["src/**/*", "libs/**/*"],
	"exclude": ["node_modules", "dist"]
}
