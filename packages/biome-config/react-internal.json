{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},

	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!dist", "!build"]
	},

	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},

	"linter": {
		"enabled": true,
		"domains": {
			"react": "recommended"
		},
		"rules": {
			"correctness": {
				"noUnusedImports": "error"
			},
			"a11y": {
				"noStaticElementInteractions": "off",
				"useKeyWithClickEvents": "off"
			}
		}
	}
}
