{
	"name": "@repo/schemas",
	"version": "0.0.0",
	"devDependencies": {
		"@repo/biome-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"typescript": "latest",
		"rimraf": "^6.0.0",
		"ts-node": "latest",
		"@swc/core": "latest",
		"@swc/cli": "latest"
	},
	"exports": {
		".": {
			"types": "./dist/esm/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"default": "./dist/esm/index.js"
		},
		"./*": {
			"types": "./dist/esm/*",
			"import": "./dist/esm/*",
			"require": "./dist/cjs/*",
			"default": "./dist/esm/*"
		}
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"private": true,
	"scripts": {
		"dev": "bun run build:esm -- -w",
		"build": "bun run clear && bun run build:cjs && bun run build:esm && bun run postbuild",
		"build:cjs": "bun x tsc -p tsconfig.cjs.json",
		"build:esm": "bun x tsc -p tsconfig.esm.json",
		"postbuild": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
		"clear": "rimraf ./dist"
	},
	"dependencies": {
		"zod": "^4.3.4"
	}
}
